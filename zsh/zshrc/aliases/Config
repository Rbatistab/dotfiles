#!/bin/bash 

# Usefull aliases as shortcuts
alias armv='sudo apt autoremove'
alias bckt='git checkout -b '
alias cat='batcat'
alias cb='cargo build'
alias cd.='code .'
alias cd_dotfiles='cd ${DOTFILES_PACKAGE_DIR}'
alias cd_scripts='cd ${MY_SCRIPTS_DIR}'
alias ckt='git checkout '
alias clr='clear'
alias cmt='git commit -m'
alias cn='cargo new'
alias cr='cargo run'
alias dff='git diff'
alias dotfiles='cd ${DOTFILES_PACKAGE_DIR} && nvim'
alias gadd='git add'
alias gupd='sudo apt-get update'
alias gupg='sudo apt-get upgrade'
alias lg='git log'
alias linup='sudo apt-get update && sudo apt-get upgrade -y'
alias ls='exa'
alias nv='nvim'
alias nv_config='cd ${HOME}/.config/nvim && nvim'
alias nv_zsh='cd ${HOME}/zshrc && nvim'
alias p3='python3'
alias pll='git pull'
alias psh='git push'
alias show_aliases='cat ${HOME}/zshrc/aliases/Config'
alias source_zsh_updates="source ${MY_SCRIPTS_DIR}/zsh_updates.sh"
alias source_nvchad_updates="source ${MY_SCRIPTS_DIR}/nvchad_updates.sh"
alias source_scripts_updates="source ${MY_SCRIPTS_DIR}/scripts_updates.sh"
alias source_tmux_updates="source ${MY_SCRIPTS_DIR}/tmux_updates.sh"
alias source_zsh='source ${HOME}/.zshrc'
alias sts='git status'
alias tst="cd ${HOME}/Sandboxes"
alias tmux_cheat_sheet='cat ${DOTFILES_PACKAGE_DIR}/tmux/.tmux.cheat_sheet'
alias upd='sudo apt update'
alias upg='sudo apt upgrade'
alias vim_zsh='vim ${HOME}/.zshrc'
alias wk='cd ${HOME}/Projects'
alias xclp='xclip -sel clip'
